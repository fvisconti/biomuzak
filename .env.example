############################################################
# biomuzak .env.example
# Copy to .env and adjust values for your environment
############################################################

# General
ENV=development
COMPOSE_PROJECT_NAME=biomuzak_dev

# Database Configuration
# Option A: Single DATABASE_URL string (preferred in some setups)
DATABASE_URL=postgres://musicuser:musicpass@localhost:5432/musicdb?sslmode=disable

# Option B: Component variables (used by docker-compose and also for app DSN building)
POSTGRES_USER=musicuser
POSTGRES_PASSWORD=musicpass
POSTGRES_DB=musicdb
POSTGRES_PORT=5432

# Database connection settings for the app (if DATABASE_URL is not provided)
DB_HOST=localhost
DB_PORT=${POSTGRES_PORT}
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Server Configuration
PORT=8080

# Host ports for services (docker-compose maps these)
BACKEND_PORT=8080
FRONTEND_PORT=3000
AUDIO_PROCESSOR_PORT=8000

# Registration & Bootstrap
# Whether to allow public registration endpoint
ALLOW_REGISTRATION=false
# Initial admin credentials used only on first startup when the users table is empty
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me
# Optional; defaults to admin@local if not set
ADMIN_EMAIL=admin@example.com

# Upload Configuration
UPLOAD_DIR=./uploads

# Audio Processor Configuration
AUDIO_PROCESSOR_URL=http://localhost:${AUDIO_PROCESSOR_PORT}

# Optional: MusicBrainz contact email (polite API usage)
MUSICBRAINZ_EMAIL=youremail@example.com
